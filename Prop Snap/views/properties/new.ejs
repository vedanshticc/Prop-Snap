<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Property</h1>
        <div class="col-md-6 offset-md-3">
            
            <form action="/properties" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" placeholder="Title" name="campground[title]"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Location</label>
                    <input class="form-control mb-3" type="text" id="address" placeholder="Street Address"
                        name="campground[address]" required>
                    <input class="form-control" type="text" id="address" placeholder="City,State"
                        name="campground[location]" required>
                </div>
                <div class="mb-3">
                    <div class="custom-file">
                      <label for="image" class="form-label">Add Image(s)</label>
                      <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                </div>

    
                
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" placeholder="Image URL" name="campground[image]"
                        required>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>

                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00/sq.feet" name="campground[price]"
                            aria-label="price" aria-describedby="price-label" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" placeholder="Description"
                        name="campground[description]" required></textarea>
                </div>
                <div class="mb-3"><button class="btn btn-success">Add Campground</button>
                </div>


            </form>
            

        </div>
    </div>

   